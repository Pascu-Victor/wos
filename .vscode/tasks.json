{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "runWosKern",
            "command": "${workspaceFolder}/scripts/run_kern.sh",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "--init-file",
                        "${workspaceFolder}/.vscode/wos-env.sh"
                    ]
                }
            },
            "args": [],
            "isBackground": true,
            "problemMatcher": [
                "$tsc",
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build and Start QEMU",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build WOS",
                "Start QEMU Debug"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build WOS",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "--init-file",
                        "${workspaceFolder}/.vscode/wos-env.sh"
                    ]
                }
            },
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Start QEMU Debug",
            "command": "${workspaceFolder}/scripts/run_kern.sh",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "--init-file",
                        "${workspaceFolder}/.vscode/wos-env.sh"
                    ]
                }
            },
            "args": [],
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "QEMU.*monitor"
                    }
                }
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Stop QEMU",
            "command": "pkill",
            "args": [
                "-f",
                "qemu-system-x86_64"
            ],
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Debug with GDB Script",
            "command": "gdb",
            "args": [
                "-x",
                "debug_vscode.gdb"
            ],
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Analyze Debug Symbols",
            "command": "bash",
            "args": [
                "-c",
                "echo 'Init binary info:' && file build/modules/init/init && echo '\\nELF header:' && readelf -h build/modules/init/init && echo '\\nDebug sections:' && readelf -S build/modules/init/init | grep -E 'debug|text|rodata' && echo '\\nSerial log (last 50 lines):' && tail -n 50 serial.log"
            ],
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "${workspaceFolder}/tools/llvm-build/bin/clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Build WOS",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "group": "build"
        },
        {
            "label": "Build WOS",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "group": "build"
        }
    ]
}
