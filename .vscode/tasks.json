{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "runWosKern",
            "command": "${workspaceFolder}/scripts/run_kern.sh",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "--init-file",
                        "${workspaceFolder}/.vscode/wos-env.sh"
                    ]
                }
            },
            "args": [],
            "isBackground": true,
            "problemMatcher": [
                "$tsc",
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "Build and Start QEMU",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build WOS",
                "Start QEMU Debug"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build WOS",
            "command": "${workspaceFolder}/scripts/build_kern.sh",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "--init-file",
                        "${workspaceFolder}/.vscode/wos-env.sh"
                    ]
                }
            },
            "isBackground": false,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Start QEMU Debug",
            "command": "${workspaceFolder}/scripts/run_kern.sh",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "--init-file",
                        "${workspaceFolder}/.vscode/wos-env.sh"
                    ]
                }
            },
            "args": [],
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "QEMU.*monitor"
                    }
                }
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        }
    ]
}