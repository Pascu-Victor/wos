{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "runWosKern",
            "command": "${workspaceFolder}/scripts/run_kern.sh",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "--init-file",
                        "${workspaceFolder}/.vscode/wos-env.sh"
                    ]
                }
            },
            "args": [],
            "isBackground": true,
            "problemMatcher": [
                "$tsc",
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Build and Start QEMU",
            "dependsOrder": "sequence",
            "dependsOn": ["Build WOS", "Start QEMU Debug"],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build WOS",
            "command": "${workspaceFolder}/scripts/build_kern.sh",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "--init-file",
                        "${workspaceFolder}/.vscode/wos-env.sh"
                    ]
                }
            },
            "isBackground": false,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Start QEMU Debug",
            "command": "source ${workspaceFolder}/.vscode/wos-env.sh && ${workspaceFolder}/scripts/run_kern.sh --debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": ["-c"]
                }
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": "^([^\\s].*):(\\d+): (.*)$",
                            "file": 1,
                            "line": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "STARTING BOOT:",
                        "endsPattern": "QEMU .* monitor - type 'help' for more information"
                    }
                }
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Build QEMU Log Viewer",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build/tools", "--target", "qemu_log_viewer"],
            "isBackground": false,
            "group": "build"
        }
    ]
}
