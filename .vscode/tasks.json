{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Check Headers",
            "command": "WOS_QUIET=1 source ${workspaceFolder}/.vscode/wos-env.sh && sh scripts/check_headers.sh modules/kern && sh scripts/check_headers.sh modules/init",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "-c"
                    ]
                }
            },
            "isBackground": false,
            "group": "build",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Build mlibc",
            "command": "WOS_QUIET=1 source ${workspaceFolder}/.vscode/wos-env.sh && ninja -C ${workspaceFolder}/toolchain/mlibc-build && ninja -C ${workspaceFolder}/toolchain/mlibc-build install",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "-c"
                    ]
                }
            },
            "isBackground": false,
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Build libcxx",
            "command": "WOS_QUIET=1 source ${workspaceFolder}/.vscode/wos-env.sh && ninja -C ${workspaceFolder}/toolchain/libcxx-build-full && ninja -C ${workspaceFolder}/toolchain/libcxx-build-full install",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "-c"
                    ]
                }
            },
            "isBackground": false,
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Build busybox",
            "command": "WOS_QUIET=1 source ${workspaceFolder}/.vscode/wos-env.sh && ${workspaceFolder}/scripts/build_busybox.sh",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "-c"
                    ]
                }
            },
            "isBackground": false,
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "CMake Build",
            "command": "WOS_QUIET=1 source ${workspaceFolder}/.vscode/wos-env.sh && cmake -B build -GNinja . && cmake --build build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "-c"
                    ]
                }
            },
            "isBackground": false,
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Create Test Disk",
            "command": "WOS_QUIET=1 source ${workspaceFolder}/.vscode/wos-env.sh && ${workspaceFolder}/scripts/create_fat32_test_disk.sh",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "-c"
                    ]
                }
            },
            "isBackground": false,
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Make Boot Image",
            "command": "WOS_QUIET=1 source ${workspaceFolder}/.vscode/wos-env.sh && ${workspaceFolder}/scripts/make_image.sh",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "-c"
                    ]
                }
            },
            "isBackground": false,
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Build WOS",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Check Headers",
                "Build mlibc",
                "Build libcxx",
                "Build busybox",
                "CMake Build",
                "Create Test Disk",
                "Make Boot Image"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "runWosKern",
            "command": "${workspaceFolder}/scripts/run_kern.sh",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "--init-file",
                        "${workspaceFolder}/.vscode/wos-env.sh"
                    ]
                }
            },
            "args": [],
            "isBackground": true,
            "problemMatcher": [
                "$tsc",
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Build and Start QEMU",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build WOS",
                "Start QEMU Debug"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Start QEMU Debug",
            "command": "WOS_QUIET=1 source ${workspaceFolder}/.vscode/wos-env.sh && ${workspaceFolder}/scripts/run_kern.sh --debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "-c"
                    ]
                }
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": "^([^\\s].*):(\\d+): (.*)$",
                            "file": 1,
                            "line": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "STARTING BOOT:",
                        "endsPattern": "QEMU .* monitor - type 'help' for more information"
                    }
                }
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Start Cluster Background",
            "command": "WOS_QUIET=1 source ${workspaceFolder}/.vscode/wos-env.sh && ${workspaceFolder}/scripts/run_cluster.sh 3 --skip 1",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "-c"
                    ]
                }
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": "^([^\\s].*):(\\d+): (.*)$",
                            "file": 1,
                            "line": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "=== WKI Cluster:",
                        "endsPattern": "Press Ctrl\\+C to stop all VMs"
                    }
                }
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Start Cluster and Debug VM",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Start Cluster Background",
                "Start QEMU Debug"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build and Start Cluster Debug",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build WOS",
                "Start Cluster and Debug VM"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build wosdbg",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/tools",
                "--target",
                "wosdbg"
            ],
            "isBackground": false,
            "group": "build"
        }
    ]
}