    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug WOS Kernel",
            "type": "lldb-dap",
            "request": "attach",
            "attachCommands": [
                "gdb-remote localhost:1234"
            ],
            "preRunCommands": [
                "target create ${workspaceFolder}/build/modules/kern/wos",
            ],
            "initCommands": [
                "settings set target.x86-disassembly-flavor intel",
                "settings set target.load-script-from-symbol-file false",
                "settings set target.process.thread.step-in-avoid-nodebug false",
                "settings set plugin.process.gdb-remote.packet-timeout 10",
            ],
            "terminateCommands": [
                "process kill"
            ],
            "preLaunchTask": "Build and Start QEMU"
        },
        {
            "name": "Debug WOS Userspace (Init Process)",
            "type": "lldb-dap",
            "request": "attach",
            "attachCommands": [
                "gdb-remote localhost:1234"
            ],
            "preRunCommands": [
                "target create ${workspaceFolder}/build/modules/kern/wos",
                "target modules add ${workspaceFolder}/build/modules/init/init",
                "target modules add ${workspaceFolder}/toolchain/target1/lib/libc.so",
                "target modules add ${workspaceFolder}/toolchain/target1/lib/libm.so",
                "target modules add ${workspaceFolder}/toolchain/target1/lib/libstdc++.so",
            ],
            "initCommands": [
                "settings set target.x86-disassembly-flavor intel",
                "settings set target.load-script-from-symbol-file false",
                "settings set target.process.thread.step-in-avoid-nodebug false",
                "settings set target.process.thread.step-avoid-nodebug false",
                "settings set target.process.thread.step-avoid-regexp ''",
                "settings set plugin.process.gdb-remote.packet-timeout 10",
                "settings set target.skip-prologue false",
            ],
            "terminateCommands": [
                "process kill"
            ],
            "preLaunchTask": "Build and Start QEMU"
        },
    ]
}