    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug WOS Kernel",
            "type": "lldb-dap",
            "request": "attach",
            "preRunCommands": [
                "target create ${workspaceFolder}/build/modules/kern/wos"
            ],
            "initCommands": [
                "settings set target.x86-disassembly-flavor intel",
                "settings set target.load-script-from-symbol-file false",
                "settings set target.process.thread.step-in-avoid-nodebug false",
                "settings set target.require-hardware-breakpoint true",
                "command alias b break set --hardware",
                "command alias hbreak break set --hardware"
            ],
            "terminateCommands": ["process kill"],
            "attachCommands": ["gdb-remote 127.0.0.1:1234"],
            "preLaunchTask": "Build and Start QEMU"
        },
        {
            "name": "Debug WOS Userspace (Init Process)",
            "type": "lldb-dap",
            "request": "attach",
            "attachCommands": ["!gdb-remote 127.0.0.1:1234"],
            "preRunCommands": [
                "target create ${workspaceFolder}/build/modules/kern/wos",
                "target modules add ${workspaceFolder}/build/modules/init/init",
                "target modules add ${workspaceFolder}/build/modules/testprog/testprog",
                "target modules add ${workspaceFolder}/toolchain/target1/lib/libc.a",
                "target modules add ${workspaceFolder}/toolchain/target1/lib/libm.a"
            ],
            "initCommands": [
                "settings set target.x86-disassembly-flavor intel",
                "settings set target.load-script-from-symbol-file true",
                "settings set target.process.thread.step-in-avoid-nodebug false",
                "settings set target.process.thread.step-avoid-regexp ''",
                "settings set target.skip-prologue false"
            ],
            "preLaunchTask": "Build and Start QEMU"
        }
    ]
}
